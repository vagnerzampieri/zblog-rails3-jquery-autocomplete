<h1>Posts</h1>

<table>
  <tr>
    <th>Title</th>
    <!--<th>Author</th>-->
    <th>Body</th>
    <th>Publication</th>
  </tr>
  <% for post in @posts %>
    <tr>
      <td><%= post.title %></td>
      <td><%#= post.author %></td>
      <td><%= post.body %></td>
      <td><%= post.publication %></td>
      <td><%= link_to "Show", post %></td>
      <td><%= link_to "Edit", edit_post_path(post) %></td>
      <td><%= link_to "Destroy", post, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Post", new_post_path(post) %></p>
